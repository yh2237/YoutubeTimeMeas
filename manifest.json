{
  "manifest_version": 3,
  "name": "YouTubeTimeMeasurer",
  "version": "1.0",
  "description": "YouTubeの視聴に費やした合計時間を測定して表示します。",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "/js/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "16": "/images/icon16.png",
      "48": "/images/icon48.png",
      "128": "/images/icon128.png"
    }
  },
  "icons": {
    "16": "/images/icon16.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  }
}
